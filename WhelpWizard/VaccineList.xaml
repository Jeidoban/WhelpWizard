<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WhelpWizard.VaccineList" Title="Vaccines and Medications">
	<ContentPage.Content>
        <ListView x:Name="vaccineListShow" ItemTapped="Handle_ItemTapped" BackgroundColor="#D9DCD6" SeparatorColor="#493843">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell x:Name="cell">
                         <ViewCell.ContextActions>
                            <MenuItem CommandParameter="{Binding .}"
                               Text="Delete" IsDestructive="True" x:Name="delete" />
                         </ViewCell.ContextActions>
                         <StackLayout Padding="15,0">
                             <Label Text="{Binding VaccineNameString}" TextColor="#61988E" />
                            <Label Text="{Binding VaccineDateString}" TextColor="Black" FontSize="12"></Label>
                         </StackLayout>
                      </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</ContentPage.Content>
</ContentPage>
